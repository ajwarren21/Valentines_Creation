model Gift {
  id            String   @id @default(uuid())
  slug          String   @unique

  senderName    String
  recipientName String
  questionText  String
  // theme         String

  giftType      GiftType
  giftConfig    Json

  theme           String  @default("classic") // classic, romantic, playful, elegant
  backgroundColor String  @default("#FFF5F7") // hex color
  accentColor     String  @default("#FF69B4") // hex color for buttons, hearts
  backgroundImage String? // URL or preset name
  giftWrapping    String  @default("heart")

  status        GiftStatus @default(CREATED)

  openedAt      DateTime?
  respondedAt   DateTime?
  createdAt     DateTime @default(now())
}

enum GiftType {
  COFFEE
  GIFTCARD
  CHOCOLATES
}

enum GiftStatus {
  CREATED
  OPENED
  ACCEPTED
  FULFILLED
}


