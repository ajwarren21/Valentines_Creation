model Gift {
  id            String   @id @default(uuid())
  slug          String   @unique
  senderName    String
  recipientName String
  questionText  String
  theme         String

  status        GiftStatus @default(CREATED)

  openedAt      DateTime?
  respondedAt   DateTime?

  coffeeDrink   String?
  coffeeSize    String?
  coffeeMilk    String?

  createdAt     DateTime @default(now())
}

enum GiftStatus {
  CREATED
  OPENED
  ACCEPTED
}

